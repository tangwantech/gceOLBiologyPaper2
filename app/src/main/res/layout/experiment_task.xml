<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="4dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:contentPadding="4dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/aim"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="4dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/autoAim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/select_the_correct_aim"
                    android:editable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/loRequirement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="4dp"
        android:visibility="visible">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_all_correct_requirements"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/requirements"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTaskRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/experiment_task_requirements_recycler_item"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/loProcedure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="4dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="4dp"
        android:visibility="visible">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/procedure"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bony_fish_june_2022"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tvSetupDiagramTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Replace with setup title"
                android:gravity="center_horizontal"/>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/labelInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="@string/provide_the_correct_names_to_the_parts_labeled"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDiagramLabels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/label_letter_and_name_select_item"
                android:visibility="visible"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/loRadioButtonsForMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/methods_or_procedures_instruction"/>
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <RadioButton
                        android:id="@+id/rbProcedure1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Method 1"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>
                    <RadioButton
                        android:id="@+id/rbProcedure2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Method 2"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>
                </RadioGroup>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProcedure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>
            </androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/loResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="4dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="4dp"
        android:visibility="visible">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/loRadioButtonsForResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/observation_or_result"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="@string/experiment_results_instruction"/>
            <RadioGroup

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rbResult1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Method 1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <RadioButton
                    android:id="@+id/rbResult2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Method 2"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

            </RadioGroup>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/loConclusion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="4dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="4dp"
        android:visibility="visible">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/loRadioButtonsForConclusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/conclusion"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="@string/experiment_conclusions_instruction"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rbConclusion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conclusion 1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <RadioButton
                    android:id="@+id/rbConclusion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conclusion 2"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <RadioButton
                    android:id="@+id/rbConclusion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conclusion 3"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>
            </RadioGroup>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>