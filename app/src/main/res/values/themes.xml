<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GCCEOLInteractivePaper2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GCCEOLInteractivePaper2" parent="Base.Theme.GCCEOLInteractivePaper2">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@drawable/gradient_backgrounf</item>
        <item name="android:statusBarColor">@color/color_primary_variant</item>
        <item name="android:textViewStyle">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="cardViewStyle">@style/CustomCardViewStyle</item>
    </style>


    <style name="Theme.GCCEOLInteractivePaper2.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryVariant">@color/color_primary_variant</item>
    <item name="colorOnPrimary">@color/color_on_primary</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="colorPrimarySurface">@color/white</item>
    <item name="android:statusBarColor">@color/color_primary_variant</item>
    <item name="android:windowNoTitle">true</item>
    </style>


    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_primary</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/color_on_primary</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabMode">fixed</item>
        <!--        <item name="tabSelectedTextColor">@color/color_on_primary</item>-->
        <item name="tabIndicatorHeight">4dp</item>

    </style>

    <style name="CustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardBackground</item> <!-- Replace with your desired color -->
    </style>
</resources>