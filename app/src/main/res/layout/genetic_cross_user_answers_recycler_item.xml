<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="4dp"
        app:contentPadding="4dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvCrossTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Replace with cross title"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/labelParentalPhenotypes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/parental_phenotype"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/loParentalPhenotypes"
                    app:layout_constraintHorizontal_weight=".3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/loParentalPhenotypes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelParentalPhenotypes"
                    app:layout_constraintEnd_toStartOf="@id/emptyView"
                    app:layout_constraintHorizontal_weight=".6">
                    <TextView
                        android:id="@+id/tvPhenotypeParent1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvCross"
                        app:layout_constraintHorizontal_weight=".45"/>
                    <TextView
                        android:id="@+id/tvCross"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="X"
                        android:textSize="12sp"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvPhenotypeParent1"
                        app:layout_constraintEnd_toStartOf="@id/tvPhenotypeParent2"
                        app:layout_constraintHorizontal_weight=".1"/>
                    <TextView
                        android:id="@+id/tvPhenotypeParent2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvCross"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight=".45"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/emptyView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/loParentalPhenotypes"
                    app:layout_constraintHorizontal_weight=".1"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/labelParentalGenotypes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/parental_genotype_2n"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/loParentalGenotypes"
                    app:layout_constraintHorizontal_weight=".3"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/loParentalGenotypes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelParentalGenotypes"
                    app:layout_constraintEnd_toStartOf="@id/frameRemarkParentalGenotype"
                    app:layout_constraintHorizontal_weight=".6">
                    <TextView
                        android:id="@+id/tvGenotypeParent1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvGenotypeParent2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:gravity="center"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <FrameLayout
                    android:id="@+id/frameRemarkParentalGenotype"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/loParentalGenotypes"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight=".1">
                    <ImageView
                        android:id="@+id/imgParentalGenotype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_check"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/imgWrongParentalGenotype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_wrong"
                        android:visibility="gone"/>
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/labelGamete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/gametes_n"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/loGametes"
                    app:layout_constraintHorizontal_weight=".3"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/loGametes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelGamete"
                    app:layout_constraintEnd_toStartOf="@id/frameRemarkGametes"
                    app:layout_constraintHorizontal_weight=".6">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp">
                        <TextView
                            android:id="@+id/tvGamete1Parent1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/round_background"/>
                        <TextView
                            android:id="@+id/tvGamete2Parent1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/round_background"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp">
                        <TextView
                            android:id="@+id/tvGamete1Parent2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/round_background"/>
                        <TextView
                            android:id="@+id/tvGamete2Parent2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/round_background"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <FrameLayout
                    android:id="@+id/frameRemarkGametes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/loGametes"
                    app:layout_constraintHorizontal_weight=".1">
                    <ImageView
                        android:id="@+id/imgCheckGametes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_check"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/imgWrongGametes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_wrong"
                        android:visibility="gone"/>
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/labelOffspringGenotypes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/offspring_genotype_2n"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/loOffSpringGenotypes"
                    app:layout_constraintHorizontal_weight=".3"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/loOffSpringGenotypes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelOffspringGenotypes"
                    app:layout_constraintEnd_toStartOf="@id/frameRemarkOffspringGenotype"
                    app:layout_constraintHorizontal_weight=".6">
                    <TextView
                        android:id="@+id/tvOffspringGenotype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <FrameLayout
                    android:id="@+id/frameRemarkOffspringGenotype"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/loOffSpringGenotypes"
                    app:layout_constraintHorizontal_weight=".1">
                    <ImageView
                        android:id="@+id/imgCheckOffspringGenotype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_check"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/imgWrongOffspringGenotype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_wrong"
                        android:visibility="gone"/>
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/labelOffspringPhenotypes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/offspring_phenotype"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/loOffspringPhenotypes"
                    app:layout_constraintHorizontal_weight=".3"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/loOffspringPhenotypes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelOffspringPhenotypes"
                    app:layout_constraintEnd_toStartOf="@id/frameRemarkOffspringPhenotype"
                    app:layout_constraintHorizontal_weight=".6">
                    <TextView
                        android:id="@+id/tvOffspringPhenotype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <FrameLayout
                    android:id="@+id/frameRemarkOffspringPhenotype"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/loOffspringPhenotypes"
                    app:layout_constraintHorizontal_weight=".1">
                    <ImageView
                        android:id="@+id/imgCheckOffspringPhenotype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_check"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/imgWrongOffspringPhenotype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_wrong"
                        android:visibility="gone"/>
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/loOffspringPhenotypicRatio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/labelPhenotypicRatio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/phenotypic_ratio"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/loPhenotypicRatio"
                    app:layout_constraintHorizontal_weight=".3"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/loPhenotypicRatio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelPhenotypicRatio"
                    app:layout_constraintEnd_toStartOf="@id/frameRemarkPhenotypicRatio"
                    app:layout_constraintHorizontal_weight=".6">
                    <TextView
                        android:id="@+id/tvOffspringPhenotypicRatio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <FrameLayout
                    android:id="@+id/frameRemarkPhenotypicRatio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/loPhenotypicRatio"
                    app:layout_constraintHorizontal_weight=".1">
                    <ImageView
                        android:id="@+id/imgCheckPhenotypicRatio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_check"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/imgWrongPhenotypicRatio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_wrong"
                        android:visibility="gone"/>
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>